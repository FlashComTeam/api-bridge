# api url
# only one API per policy file
API https://api.bots.business/v1

# add this api key as parameter
# store this key in ENV as BB_API_KEY
SAFE PARAM api_key=BB_API_KEY

# always permitted methods
ALWAYS GET /bots
ALWAYS GET /bots/{integer}

# ask for permission on bot destroying
ASK DESTOY /bots/{integer}